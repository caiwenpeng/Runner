<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:activity="com.hut.cwp.runner.homepage.MainActivity">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </LinearLayout>


    <Button
        android:id="@+id/btn_map"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_gravity="top|start"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/map" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbtn_state_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:src="@mipmap/logo"
        android:layout_marginBottom="@dimen/y200"
        app:borderWidth="0dp"
        app:backgroundTint="#FF4011"
        app:rippleColor="#33728dff"
        app:elevation="8dp"
        app:pressedTranslationZ="16dp"
        />

    <RelativeLayout
        android:id="@+id/layout_contor"
        android:layout_width="@dimen/x480"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="@dimen/y200"
        >

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/btn_start"
            android:layout_alignParentLeft="true"
            android:text="暂停" />


        <Button
            android:id="@+id/btn_finish"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:background="@drawable/btn_start"
            android:layout_margin="@dimen/x20"
            android:text="结束" />



    </RelativeLayout>


</FrameLayout>
